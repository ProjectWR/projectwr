{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "projectwr-dev",
  "version": "0.1.0",
  "identifier": "com.tauri.projectwr",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "projectwr-dev",
        "width": 1024,
        "height": 768,
        "minHeight": 768,
        "minWidth": 1024,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false,
        "decorations": false,
        "shadow": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/**/*": "resources/"
    }
  }
}
